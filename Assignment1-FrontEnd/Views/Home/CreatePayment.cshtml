@model CreatePaymentViewModel

@{
    ViewBag.Title = "CreatePayment";
}

<h2>Create Payment</h2>

<form action="@Url.Action("CreatePayment", "Home")" method="post" enctype="multipart/form-data" style="margin-top:50px">

    @Html.ValidationSummary(false)
    <div class="form-group">
        @Html.LabelFor(p => p.Amount, "Amount")
        @Html.TextBoxFor(p => p.Amount, new { @class = "form-control", placeholder = "Amount" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.FirstName, "FirstName")
        @Html.TextAreaFor(p => p.FirstName, new { @class = "form-control", placeholder = "FirstName", rows = 5, columns = 5 })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.LastName, "LastName")
        @Html.TextBoxFor(p => p.LastName, new { @class = "form-control", placeholder = "LastName", rows = 5, columns = 5 })
    </div>
    <div class="form-group">
        <span> Visa: </span> @Html.RadioButton("BrandCode", "Visa", true)
        <span> Mastercard: </span> @Html.RadioButton("BrandCode", "Mastercard", false)
        <span> American Express: </span> @Html.RadioButton("BrandCode", "American Express", false)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.CreditCardNumber, "CreditCardNumber")
        @Html.TextBoxFor(p => p.CreditCardNumber, new { @class = "form-control", placeholder = "CreditCardNumber", rows = 5, columns = 5 })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.SecurityCode, "SecurityCode")
        @Html.TextBoxFor(p => p.SecurityCode, new { @class = "form-control", placeholder = "SecurityCode", rows = 5, columns = 5 })

        <div class="">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

